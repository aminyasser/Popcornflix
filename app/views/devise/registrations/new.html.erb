<%= stylesheet_link_tag "form" %>
  <section>
        <div class="container active">
                  <div class="user signupBox">
                <!-- FORM BOX -->
                <div class="formBox">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <h2>Create an account</h2>
                    <%= f.text_field :name, autofocus: true, autocomplete: "name" , placeholder: "Name" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Email Address" %>
              
                    <%= f.password_field :password, autocomplete: "new-password" , placeholder: "Password" %>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "Confirm Password" %>
                  
                    <%= f.submit "Sign in" %>
                  
                  <p class="signup">Don't have an account ? <%= link_to "Sign in", user_session_path %> </p>
                <% end %>
            
                </div>
                <!-- IMAGE BOX -->
                <div class="imgBox">
                    <%= image_tag "signup.jpg"%>
                </div>
            </div>
        </div>
    </section>

